<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guthboss.com.finalproject.AddKitchenItem">

    <Spinner
        android:id="@+id/appliance_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"

        android:entries="@array/kitchen_items"

        />

    <EditText
        android:id="@+id/name_of_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appliance_type"
        android:hint="Enter Name of new item"
         />
    <Button
        android:id="@+id/submit_new_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="ADD"
        android:textAlignment="center"
        android:layout_below="@+id/name_of_item"
        android:layout_alignParentStart="true" />


</RelativeLayout>
